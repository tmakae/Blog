---
export interface Props {
    title: string;
	description: string;
}
// Usage: <InfoCard title="" data={} />
const { title, description } = Astro.props;
---


<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 12px 12px;
}
.max-lines {
  display: block;/* or inline-block */
  text-overflow: ellipsis;
  word-wrap: break-word;
  overflow: auto;
  max-height: 2.6em;
  line-height: 1.8em;
}

</style>
</head>
<body>


<div class="card">
  <div class="container">
    <img width={720} height={360} src="/placeholder-hero.jpg" alt="" />
    <h4><b>{title}</b></h4> 
    <p class="max-lines">{description}</p> 
  </div>
</div>

</body>
</html> 
